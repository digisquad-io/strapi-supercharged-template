{
  "kind": "collectionType",
  "collectionName": "sample_products",
  "info": {
    "name": "Sample Plugin - Product",
    "description": ""
  },
  "options": {
    "draftAndPublish": false,
    "increments": true,
    "timestamps": true,
    "comment": ""
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "provider": {
      "type": "enumeration",
      "enum": ["aliexpress", "amazon"],
      "default": "aliexpress",
      "required": true
    },
    "publishAt": {
      "type": "datetime"
    },
    "price": {
      "type": "float",
      "required": true,
      "default": 0,
      "min": 0
    },
    "stocks": {
      "type": "float",
      "required": true,
      "default": 0,
      "min": 0
    },
    "articles": {
      "via": "products",
      "collection": "article",
      "dominant": true
    }
  }
}
